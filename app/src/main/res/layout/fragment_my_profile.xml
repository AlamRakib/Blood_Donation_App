<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfileFragment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bottom_crubed"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/iconTV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="50dp"
            android:layout_marginTop="50dp"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/rakib"
                android:scaleType="centerCrop"

                >

            </ImageView>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nameID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iconTV"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text=" S H A M S U L  A L A M  R A K I B"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"

            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameID"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:padding="5dp"
            android:text=" Android Developer"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>



    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="240dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameID"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:fontFamily="serif"
                android:text="''Android Application Developer with 1.5+ years experience.Over this time i have developed a wide range of projects in Android and gained a lot of experience in creating quality application. I have skilled in Java, Oop, Java Spring Boot in Android Development, C and C++. Strong engineering professional with Bachelor's Degree focused in Computer Science.'' \n \nDatabase: SQL, SQLite, Room, Firebase,   MySql "
                android:textColor="#B0000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:justificationMode="inter_word"

                >


            </TextView>

            <ImageButton
                android:id="@+id/mailBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/mailsend"
                android:background="@drawable/rounded_button"
                android:layout_marginTop="10dp"

                >

            </ImageButton>

        </LinearLayout>



    </androidx.cardview.widget.CardView>



</RelativeLayout>