<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"


        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:orientation="vertical"
        android:background="@drawable/bottom_shade2"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Group:"
                android:paddingLeft="20dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                >

            </TextView>

            <TextView
                android:id="@+id/bloodGroupId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textSize="18sp"
                android:layout_marginTop="5dp"


                >

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donar Name:"
                android:paddingLeft="20dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                >

            </TextView>

            <TextView
                android:id="@+id/donarNameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donar Name"
                android:textColor="#F1F1F1"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textSize="14sp"


                >

            </TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Divison:"
                android:paddingLeft="20dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                >

            </TextView>

            <TextView
                android:id="@+id/divisonNameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Divison"
                android:textColor="#F8F8F8"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textSize="14sp"


                >

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="District:"
                android:paddingLeft="20dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                >

            </TextView>

            <TextView
                android:id="@+id/districtNameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="District"
                android:textColor="#F8F8F8"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:paddingTop="2dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textSize="14sp"


                >

            </TextView>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/callAnimationViewId"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:lottie_rawRes="@raw/call"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_marginLeft="270dp"

                />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/messageAnimationViewId"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:lottie_rawRes="@raw/message"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_marginLeft="10dp"

                />

        </LinearLayout>








    </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>

